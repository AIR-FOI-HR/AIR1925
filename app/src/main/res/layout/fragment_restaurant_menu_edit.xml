<Spinner
    android:id="@+id/spnrCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/txtLayNameDish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtInputNameDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of dish" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/txtLayPriceDish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtInputPriceDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price" />

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/txtLayItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtInputItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Items"/>

</com.google.android.material.textfield.TextInputLayout>

<androidx.appcompat.widget.AppCompatCheckBox
    android:id="@+id/checkGluten"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:text="Glutenfree" />

<androidx.appcompat.widget.AppCompatCheckBox
    android:id="@+id/checkboxDairy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:text="DairyFree" />


</LinearLayout>