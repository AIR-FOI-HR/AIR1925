<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fadingEdge="horizontal"
    android:layout_marginVertical="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/status_bulletInfoGuest"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:background="@drawable/circle_button"
                android:backgroundTint="@color/yellow"></LinearLayout>


            <TextView
                android:id="@+id/restaurant_name_orderInfoGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of restaurant"
                android:textAlignment="textStart"
                android:textSize="21dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADRESS"
                android:textAlignment="textStart"
                android:textSize="9sp"
                />
            <TextView
                android:id="@+id/restaurant_adressInfoGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adress"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESERVATION"
                android:textAlignment="textStart"
                android:textSize="9sp"
                />
            <TextView
                android:id="@+id/order_datetimeInfoGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reservation time"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NUMBER OF PERSONS"
                android:textAlignment="textStart"
                android:textSize="9sp"
                />
            <TextView
                android:id="@+id/number_of_personsInfoGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of persons"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
            <TextView
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textAlignment="textStart"
                android:textSize="9sp"
                />
            <TextView
                android:id="@+id/order_priceInfoGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:paddingLeft="6dp"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETAILS"
                android:textAlignment="textStart"
                android:textSize="12sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvOrderDetailsInfoGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"/>




        </LinearLayout>
    </LinearLayout>
</RelativeLayout>